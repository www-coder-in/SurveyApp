<div class="container">

<h2> Hi <%= @user.username %> ! </h2>
<h4> Check out your survey!</h4>
<h5> <%= @survey.title %> </h5>

<form id="ask_question" method="post" action="/users/<%= @user.id %>/surveys/<%= @survey.id %>/questions/new">
 <input type="textbox" class="question" name="input[description]" placeholder="Enter Question here">
 <input class="button-primary" type="submit" value="Add question">
</form>

<ol>
  <% @questions.each do |question| %>
    <li>
      <a href="/users/<%=  current_user.id %>/surveys/<%=  @survey.id %>/questions/<%= question.id %>/choices"><%= question.subject %><a>
    </li>
  <% end %>
</ol>

</div>